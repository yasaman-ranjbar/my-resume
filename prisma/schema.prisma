datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
}

model Category {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  slug      String   @unique
  posts Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String
  slug      String   @unique
  content   String
  status    String
  tags      String[]
  category_id Int
  category    Category @relation(fields: [category_id], references: [id], onDelete: Cascade)
  cover_url String?
}

model project { 
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String
  slug      String   @unique
  description   String @db.Text
  shortDescription   String  @db.VarChar(280)
  liveUrl     String?
  githubUrl     String?
  tags      String[]
  thumbnail String?
}